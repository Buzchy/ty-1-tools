	</tymod>

	<tymod name="Bambi Cliffs" version="1.0.0" tyversion="" authors="Dnawrkshp" description="Renames Rainbow Cliffs to Bambi Cliffs.">
		<!-- Rename `Rainbow Cliffs` to `Bambi Cliffs` for english and french -->
		<translation name="TEXT_LEVEL_Z1">
			<english value="Bambi Cliffs"></english>
			<french value="Bambi Cliffs"></french>
		</translation>
	</tymod>

	<tymod name="Custom Map" version="1.0.0" tyversion="[,0]" authors="Dnawrkshp" description="Adds a custom map portal in between A Walk in the Park and Ship Rex.&#13;&#10;This is not a valid map and is disabled.">
		<!-- Add custom map from CustomMap0 directory. Path must be relative. -->
		<level directory="CustomMap0/" name="Beyond the Black Stump Copy">
			<!-- Name of map in each supported language -->
			<name>
				<english value="Custom Map EN"></english>
				<spanish value="Custom Map ESP"></spanish>
				<german value="Custom Map DE"></german>
				<french value="Custom Map FR"></french>
				<italian value="Custom Map IT"></italian>
			</name>

			<!-- Position of portal in Rainbow Cliffs -->
			<position>
				<x value="0"></x>
				<y value="2372"></y>
				<z value="12520"></z>
			</position>
		</level>
	</tymod>

	<tymod name="Dumb AI" version="1.0.0" tyversion="" authors="Dnawrkshp" description="Make all AI ignore you.">
		<!--
			context can be used to define a part of the global you wish to apply the edits to.
			Context is defined by the comments above each segment in a global file.
			For instance, the comment:

				// ==================================================================== Actors go here

			Appears above all actor definitions in the global.model file. We then use regex to determine if the context matches.
			This allows you to edit the correct defintions.
		-->
		<global source="global.model" type="inclusive" context="actors go here" name=".">
			<chaseRange value="0"></chaseRange>
			<stayAlertRange value="0"></stayAlertRange>
			<alertRange value="0"></alertRange>
		</global>
	</tymod>
</root>
